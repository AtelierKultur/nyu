{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Frontend",
  "extends": "./base.json",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react-jsx"
  },
  "include": ["./.eslintrc.js", "./.eslintrc.cjs", "./vite.config.ts"],
  "exclude": ["node_modules", "build", "src/**/*.test.ts", "src/**/*.test.tsx", "src/**/*.test.js", "src/**/*.test.jsx", "src/**/*.js", "src/**/*.jsx"]
}
